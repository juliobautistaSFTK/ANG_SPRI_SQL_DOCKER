# Usa una imagen base de Node.js para la instalaci칩n de Angular
FROM node:16 AS build

# Configura el directorio de trabajo en el contenedor
WORKDIR /app

# Copia el archivo package.json y package-lock.json
COPY package*.json ./

# Instala las dependencias de Angular
RUN npm install

# Copia el c칩digo fuente al contenedor
COPY . .

# Construye el proyecto de Angular
RUN npm run build

# Usa una imagen base m치s ligera para producci칩n
FROM nginx:alpine

# Copia los archivos de build generados al contenedor de nginx
COPY --from=build /app/dist/ /usr/share/nginx/html

# Expon el puerto 80 para que se pueda acceder a la app
EXPOSE 80

# Inicia nginx en el contenedor
CMD ["nginx", "-g", "daemon off;"]
